{
  "manifest_version": 3,
  "name": "ColdMailAI - Research Assistant",
  "version": "1.0.0",
  "description": "Research companies and generate personalized cold emails with AI. Works with ColdMailAI web platform.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://mail.readytorelease.online/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Research companies & generate cold emails"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.readytorelease.online/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
