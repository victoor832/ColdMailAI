{
  "manifest_version": 3,
  "name": "ColdMailAI - Research Assistant",
  "version": "1.0.0",
  "description": "Instantly research any company and generate personalized cold emails with AI",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://mail.readytorelease.online/*",
    "http://localhost:3000/*",
    "https://www.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ColdMailAI - Research Assistant"
  },
  "options_page": "settings.html",
  "web_accessible_resources": [
    {
      "resources": ["history.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
