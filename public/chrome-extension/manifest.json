{
  "manifest_version": 3,
  "name": "ColdMailAI - Research Assistant",
  "version": "1.0.0",
  "description": "Instantly research any company and generate personalized cold emails with AI",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "icons": {
    "16": "/images/icon-16.png",
    "32": "/images/icon-32.png",
    "48": "/images/icon-48.png",
    "128": "/images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ColdMailAI - Research Assistant"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
